        android:shortcutLongLabel="@string/launcher_shortcuts_todayAdviceLong"
        android:shortcutDisabledMessage="@string/launcher_shortcuts_disabled">
        <intent
            android:action="android.intent.action.VIEW"
            android:targetPackage="gq.emiliodallatorre.oneaday.app"
            android:targetClass="gq.emiliodallatorre.oneaday.iterator.MainActivity" />
